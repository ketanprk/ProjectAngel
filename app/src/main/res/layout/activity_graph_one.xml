<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
>

    <android.support.v7.widget.Toolbar
            android:id="@+id/mToolbar"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/black"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp"
            app:layout_collapseMode="pin"

            app:layout_scrollFlags="scroll|enterAlways"
    >

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/im_calender"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="60dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/calendar"
            />

            <TextView
                    android:id="@+id/tv_title"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="BITCOIN PRICE"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

            <ImageView
                    android:layout_alignParentRight="true"
                    android:id="@+id/im_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/notifications"
            />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:padding="25dp"
                    android:background="@color/black">
        <TextView
                android:id="@+id/tv_coinbase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Coinbase"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:textAllCaps="true"
        />
        <TextView
                android:layout_below="@+id/tv_coinbase"
                android:id="@+id/tv_rate"
                android:layout_width="wrap_content"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:textSize="32sp"
                android:layout_height="wrap_content"
                tools:text="$ 4,290.01"
        />
        <View android:layout_width="41dp"
              android:id="@+id/view_slash"
              android:layout_toLeftOf="@+id/tv_value"
              android:background="@drawable/line_diagnol" android:layout_height="70dp"/>
        <TextView
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/ll_hig_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:id="@+id/tv_value"
                android:layout_alignBottom="@+id/tv_rate"
                tools:text="30,333.22 B"
        />
        <LinearLayout
                android:id="@+id/ll_hig_low"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/tv_value"
                android:gravity="left"

                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:textSize="12sp"
                    android:textColor="@color/text_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="High"
            />
            <TextView
                    android:layout_gravity="left"
                    android:textSize="12sp"
                    android:gravity="left"
                    android:textColor="@color/text_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Low"
            />
            <TextView
                    android:textSize="12sp"
                    android:textColor="@color/text_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Vol"
            />
        </LinearLayout>
    </RelativeLayout>

    <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?actionBarSize"
            app:tabGravity="fill"
            app:tabIndicatorHeight="4dp"
            android:background="@color/black"
            app:tabMode="fixed">
    </android.support.design.widget.TabLayout>

    <RelativeLayout android:layout_width="match_parent"
                    android:background="@color/black" android:layout_height="match_parent">

        <android.support.design.widget.BottomNavigationView
                android:id="@+id/bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                app:itemBackground="@color/black"
                app:itemIconTint="@color/white"
                app:itemTextColor="@color/white"
                app:menu="@menu/menu_bottom_bar"/>

    </RelativeLayout>

</LinearLayout>